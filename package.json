{
  "name": "run-safely",
  "version": "1.0.1",
  "description": "Helpers to add better type safety and error handling to your code",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "ts:check": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "make-badges": "istanbul-badges-readme --logo=\"vitest\""
  },
  "keywords": [
    "typescript",
    "error handling",
    "type safety",
    "fetch",
    "http",
    "nextjs",
    "server actions",
    "react"
  ],
  "author": "Evan Wechsler",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.0",
    "@vitest/coverage-istanbul": "^3.0.4",
    "@vitest/coverage-v8": "^3.0.4",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "istanbul-badges-readme": "^1.9.0",
    "prettier": "3.4.2",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "zod": "^3.24.1"
  }
}
